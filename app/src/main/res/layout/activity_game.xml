<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.randoms.harmonicmaster.GameActivity">
    <me.randoms.harmonicmaster.views.MyGLSurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/game"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:layout_gravity="end"
        android:textColor="#53ff3d"
        android:textSize="28sp"
        android:layout_marginRight="30px"
        android:layout_marginTop="50px"
        android:id="@+id/score"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="64px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#a333"
            android:gravity="center"
            android:layout_marginLeft="100dp"
            android:visibility="gone"
            android:id="@+id/currentTone">
            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="#fff"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="-1dp"
                android:id="@+id/firstPoint"/>
            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="#fff"
                android:layout_marginBottom="-4dp"
                android:layout_marginRight="-1dp"
                android:id="@+id/secondPoint"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#fff"
                android:id="@+id/tone"
                />
            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="#fff"
                android:layout_marginTop="-2dp"
                android:layout_marginRight="-1dp"
                android:id="@+id/thirdPoint"/>
            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="#fff"
                android:layout_marginTop="2dp"
                android:layout_marginRight="-1dp"
                android:id="@+id/forthPoint"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="520dp"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:background="#9555"
        android:orientation="vertical"
        android:id="@+id/pauseView"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="送别"
            android:textSize="70sp"
            android:textColor="#03a9f4"
            android:layout_marginTop="20dp"
            android:id="@+id/title"
            android:singleLine="true"
            android:ellipsize="end"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="start button"
            android:src="@drawable/start"
            android:layout_marginTop="80dp"
            android:id="@+id/start"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="520dp"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:background="#9555"
        android:orientation="vertical"
        android:id="@+id/gameOverView">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="送别"
            android:gravity="center"
            android:textSize="70sp"
            android:textColor="#03a9f4"
            android:layout_marginTop="20dp"
            android:id="@+id/gameOverTitle"
            android:singleLine="true"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完美:"
                android:textColor="#03a9f4"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#eeff41"
                android:textSize="26sp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="命中:"
                android:textColor="#03a9f4"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#eeff41"
                android:textSize="26sp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="丢失:"
                android:textColor="#03a9f4"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#eeff41"
                android:textSize="26sp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分数:"
                android:textColor="#03a9f4"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#eeff41"
                android:textSize="26sp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您获得了最高分"
            android:textColor="#f4ff81"
            android:textSize="26sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="start button"
                android:src="@drawable/start"
                android:id="@+id/gameOverStart"/>
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="exit button"
                android:src="@drawable/exit"
                android:id="@+id/gameOverExit"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
